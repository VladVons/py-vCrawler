<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Scheme test</title>

    <script src="/assets/js/lib.js"></script>
    <link rel="stylesheet" href="/assets/css/scheme.css">
    <link rel="stylesheet" href="/assets/vendor/css/bootstrap.css">
  </head>

  <body>
    <ul class="nav nav-tabs" id="tabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="product-tab" data-bs-toggle="tab" data-bs-target="#product"
          type="button" role="tab" aria-controls="product" aria-selected="true">Product</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="product-src-tab" data-bs-toggle="tab" data-bs-target="#product-src"
          type="button" role="tab" aria-controls="product-src" aria-selected="false">Product-src</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="category-tab" data-bs-toggle="tab" data-bs-target="#category"
          type="button" role="tab" aria-controls="category" aria-selected="false">Category</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="help-tab" data-bs-toggle="tab" data-bs-target="#help"
          type="button" role="tab" aria-controls="help" aria-selected="false">Help</button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="myTabContent">
      <!-- product -->
      <div class="tab-pane fade show active" id="product" role="tabpanel" aria-labelledby="product-tab">
        <div class="row mt-3">
          <div class="col-6">
            <button class="btn btn-primary" id="btn_test">Test</button>
            <button class="btn btn-primary" id="btn_template">Template</button>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-6 editor">
            <div class="numbers">
              <span></span>
            </div>
            <textarea class="form-control exTextArea" wrap="off" id="ta_script" placeholder="product script"></textarea>
          </div>
          <div class="col-6 editor">
            <div class="numbers">
              <span></span>
            </div>
            <textarea class="form-control" wrap="off" id="ta_result" placeholder="result" readonly></textarea>
          </div>
        </div>
        <div class="row mt-3">
          <textarea class="form-control" id="ta_error" rows="10" placeholder="errors" readonly></textarea>
        </div>
      </div>

      <!-- product-src -->
      <div class="tab-pane show" id="product-src" role="tabpanel" aria-labelledby="product-src-tab">
        <div>
          <button class="btn btn-primary" id="btn_get">get</button>
          <button class="btn btn-primary" id="btn_get_emul">get emul</button>
        </div>
        <div class="row mt-3">
          <div class="col-8">
            <textarea class="form-control" wrap="off" id="ta_product_src" placeholder="product source" readonly></textarea>
          </div>
          <div class="col-4">
            <textarea class="form-control" wrap="off" id="ta_product_src_fmt" placeholder="product source formated" readonly></textarea>
          </div>
        </div>
      </div>

      <!-- category -->
      <div class="tab-pane fade" id="category" role="tabpanel" aria-labelledby="category-tab">
        <p class="mt-3">This is the Profile tab content.</p>
      </div>

      <!-- help -->
      <div class="tab-pane fade" id="help" role="tabpanel" aria-labelledby="help-tab">
        <textarea class="form-control" wrap="off" id="ta_help" placeholder="help"></textarea>
      </div>
    </div>

    <script src="/assets/vendor/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/jsExt/scheme.js"></script>
    <script type="text/javascript">
      TextNumbering();
      HandleDblClickErr();

      const tabElement = document.getElementById('tabs');
      TabChange(tabElement);
    </script>
  </body>
</html>
