<!-- header + -->
<div class="logo-and-select">
  <div class="logo">
    <a href="#"><img src="logo.png" alt="Logo" height="40"></a>
  </div>
  <select class="form-select ms-2 d-md-none">
    <option selected>ua</option>
    <option value="1">ua</option>
    <option value="2">pl</option>
  </select>
</div>

<form class="search-group ms-3" method="get" autocomplete="off">
  <input type="hidden" name="route" value="product/search"/>
  <input type="text" class="form-control search-input" name="q" value="{{search}}" id="viSearchInput" placeholder="Search">
  <button type="submit" class="search-icon ms-2" aria-label="Search">
    <i class="bi bi-search"></i>
  </button>
  <select class="form-select ms-2 d-none d-md-inline" name="country_id">
    {% for Rec in TDbList().Import(dbl_country) %}
    {% if Rec.id == country_id %}
      <option value="{{Rec.id}}" selected>{{Rec.alias}}</option>
    {% else %}
      <option value="{{Rec.id}}">{{Rec.alias}}</option>
    {% endif %}
    {% endfor %}
  </select>
</form>
