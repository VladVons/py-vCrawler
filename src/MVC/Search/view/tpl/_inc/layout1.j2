<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  {% if meta_title %}
   <title>{{ meta_title }}</title>
   <meta property="og:title" content="{{meta_title}}">
  {% endif %}
  {% if meta_descr %}
   <meta name="description" content="{{meta_descr}}">
   <meta property="og:description" content="{{meta_descr}}">
  {% endif %}
  {% if meta_image %}
   <meta property="og:image" content="{{meta_image}}">
  {% endif %}

  {% block head %}{% endblock %}
  <link rel="stylesheet" href="/assets/vendor/css/bootstrap.css">
  <link rel="stylesheet" href="/assets/vendor/css/fontawesome.css">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script src="/assets/js/lib.js"></script>
  <script src="/assets/js/app.js"></script>
  <style>
    body {
      padding-top: 60px;
      padding-bottom: 60px;
    }
    .fixed-top, .fixed-bottom {
      background-color: #f8f9fa;
      z-index: 1030;
    }
    .header-container {
      display: flex;
      align-items: center;
      justify-content: start;
      gap: 0.5rem;
    }
    .search-group {
      display: flex;
      align-items: center;
      flex-grow: 1;
    }
    .search-input {
      flex: 0 0 40%;
    }
    .search-icon {
      background: none;
      border: none;
      padding: 0.375rem 0.75rem;
    }
    .form-select {
      width: auto;
    }

    /* Responsive styles for mobile */
    @media (max-width: 768px) {
      .header-container {
        flex-direction: column;
        align-items: start;
      }
      .search-group {
        width: 100%;
      }
      .logo-and-select {
        display: flex;
        align-items: center;
        width: 100%;
        justify-content: space-between;
      }
      .search-input {
        flex: 1; /* Full width for search input on mobile */
      }
      .search-icon {
        margin-left: auto;
      }
    }
  </style>
</head>

<body>
  <header class="fixed-top">
    <div class="container header-container">
      {% include './header.j2' %}
    </div>
  </header>

  <main class="container mt-3">
    {% block content %}{% endblock %}
  </main>

  <footer class="fixed-bottom text-center py-2">
    <div class="container vFooter">
      {% include './footer.j2' %}
    </div>
  </footer>

  <script src="/assets/vendor/js/bootstrap.bundle.min.js"></script>
</body>
</html>
