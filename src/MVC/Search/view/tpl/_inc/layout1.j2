<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>HomePage</title>

    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
    <script src="/assets/js/lib.js"></script>
    <script src="/assets/js/app.js"></script>
    <script src="/assets/jsExt/app.js"></script>
    <script src="/assets/js/search1.js"></script>
    {% block head %}{% endblock %}
</head>

<body id="startpage">
    {% include './header.j2' %}

    <section id="promo">
        <div class="container">
            <h1>Find your <strong>dream wares</strong> here!</h1>
            <div class="form__search">
                <form method="get" autocomplete="off" id="viSearchForm">
                    <input type="hidden" name="route" value="product/search"/>
                    <input type="text" id="viSearchInput" name="q" value="{{search}}" placeholder="{{Trans(lang, 'search')}}">
                    <div class="autocomplete-items" id="viSearchSuggest"><!-- JS --></div>
                    <select name="country_id" id="viCountry">
                        <option disabled="disabled">{{Trans(lang, 'location')}}</option>
                        {% for Rec in TDbList().Import(dbl_country) %}
                        <option value="{{Rec.id}}" data-lang="{{Rec.lang_id}}" {{Iif(Rec.id == country_id, 'selected', '')}}>{{Rec.title}} ({{Rec.alias}})</option>
                        {% endfor %}
                    </select>
                    <button class="btn btn-green">{{Trans(lang, 'search')}}</button>
                </form>
            </div>
            {% block promo %}{% endblock %}
        </div>
    </section>

    {% block content %}{% endblock %}
    {% include './footer.j2' %}

    <script type="text/javascript" src="/assets/jsExt/main.js"></script>

    <script type="text/javascript">
        OnCountry();

        OnHeadCompareFavorite(
          {
            'history': '{{href.history}}',
            'compare': '{{href.compare}}',
            'favorite': '{{href.favorite}}'
          }
        );

        //const search_ajax = '{{href_search_ajax}}';
        //const search_query = {'method': 'ajax', 'lang_id': '{{lang_id}}', 'country_id': '{{country_id}}'}
        //searchNavbar(search_ajax, search_query);
    </script>

</body>
</html>