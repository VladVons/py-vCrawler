<button class="chat-btn-toggle" onclick="toggleChat()">💬</button>

<div class="chat-container" id="chat-container">
    <div class="chat-header">
        <span>Chat with Bot</span>
        <button class="btn-close" onclick="toggleChat()">❌</button>
    </div>
    <div class="chat-box" id="chat-box"></div>
    <div class="chat-input-container">
        <textarea class="chat-textarea" id="message" placeholder="Type your message..." rows="2"></textarea>
        <button class="chat-btn" onclick="sendMessage()">Send</button>
    </div>
</div>
