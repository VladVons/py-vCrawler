{% extends '_inc/layout1.j2' %}

{% block promo %}
<!-- home + -->
<div class="categories">
  {% for Rec in TDbList().Import(dbl_category) %}
  <div class="item">
    <a href="#">
      <div class="icon">
        <img src="/assets/images/category/{{Rec.category}}.svg" alt="{{Rec.category}}">
      </div>
      <span>{{Rec.lang}}</span>
    </a>
  </div>
  {% endfor %}
</div>
<!-- home - -->
{% endblock %}

{% block content %}
<!-- home + -->
<section id="products__list">
  <div class="container">
      <div class="section__title">
          <h2 class="bt">{{Trans(lang, 'last added')}}</h2>
          <a href="#">View all</a>
      </div>

      <div class="products__list">
        {% include '../_inc/products_a.j2' %}
      </div>

      <div class="pagination">
          <a href="#" class="btn btn-green" id="viBtn_Clear">{{Trans(lang, 'show all')}}</a>
      </div>
  </div>
</section>
<!-- home - -->
{% endblock %}
